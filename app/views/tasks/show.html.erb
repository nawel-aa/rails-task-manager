<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input id="completed" type="checkbox" disabled <%= "checked" if @task.completed %>>
<label for="completed"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label>

<%= link_to  "Tasks", tasks_path %>
<%= link_to  "Edit", edit_task_path(@task) %>
<%= link_to  "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>